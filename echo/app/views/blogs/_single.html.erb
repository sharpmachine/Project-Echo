<div class="box blog-excerpt">


	<div id="post-44" class="post-44 post type-post hentry category-uncategorized">

		<h2 class="entry-title"><%= link_to post.title, project_blog_path(@project, post) %></h2>

		<div class="pimp-entry-meta">
			<span class="month"><%= post.created_at.strftime("%b") %></span>
			<span class="day"><%= post.created_at.strftime("%d") %></span>
			<span class="year"><%= post.created_at.strftime("%y") %></span>
		</div>
		
		<div class="entry-content">
			<% if single %>
				<%= simple_format post.content %>
			<% else %>
				<%= simple_format(truncate(post.content, :length => 600) +  link_to(raw(" Continue Reading <span class=\"meta-nav\">&rarr;</span>"), project_blog_path(@project, post))) %>
			<% end %>
		</div><!-- .entry-content -->
	</div><!-- #post-## -->
</div>